{
  // -----------------------
  // General Editor Settings
  // -----------------------
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSave": true,
  "editor.tabSize": 2,
  "editor.insertSpaces": true,
  "editor.trimAutoWhitespace": true,
  "editor.detectIndentation": false,
  "editor.formatOnPaste": true,
  "editor.formatOnType": true,
  "editor.codeActionsOnSave": {
    "source.organizeImports": "false"
  },

  // -----------------------
  // Language-specific formatters
  // -----------------------
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[cairo]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true,
    "editor.tabSize": 2
  },

  // -----------------------
  // File Associations
  // -----------------------
  "files.associations": {
    "*.cairo": "cairo"
  },

  // -----------------------
  // Starknet/Cairo Token Colors
  // -----------------------
  "editor.tokenColorCustomizations": {
    "textMateRules": [
      {
        "scope": ["keyword.starknet"],
        "settings": { "foreground": "#FF6600", "fontStyle": "bold" }
      },
      {
        "scope": ["variable.other.starknet"],
        "settings": { "foreground": "#00CCFF" }
      },
      {
        "scope": ["entity.name.function.starknet"],
        "settings": { "foreground": "#00FF00", "fontStyle": "italic" }
      },
      {
        "scope": ["storage.starknet"],
        "settings": { "foreground": "#FFD700" }
      },
      {
        "scope": ["event.starknet"],
        "settings": { "foreground": "#FF00FF", "fontStyle": "bold" }
      }
    ]
  },

  // -----------------------
  // VS Code UI Colors (Starknet Theme)
  // -----------------------
  "workbench.colorCustomizations": {
    "editor.background": "#0B0D17",
    "editor.foreground": "#E0E0E0",
    "editorLineNumber.foreground": "#5A5A5A",
    "editor.selectionBackground": "#1E1E2F",
    "editorCursor.foreground": "#FF6600",
    "editorWhitespace.foreground": "#404040",
    "sideBar.background": "#0F111B",
    "sideBar.foreground": "#E0E0E0",
    "statusBar.background": "#1A1C2B",
    "statusBar.foreground": "#FF6600",
    "activityBar.background": "#0F111B",
    "activityBar.foreground": "#FF6600",
    "activityBarBadge.background": "#FF6600",
    "activityBarBadge.foreground": "#0B0D17",
    "terminal.background": "#0B0D17",
    "terminal.foreground": "#E0E0E0"
  },
  "workbench.sideBar.location": "left",
  "workbench.statusBar.visible": true,
  "workbench.editor.showTabs": "multiple",
  "workbench.editor.enablePreview": false,

  // -----------------------
  // Terminal
  // -----------------------
  "terminal.integrated.fontSize": 14,
  "terminal.integrated.cursorBlinking": true
}
